.card-img {
  margin: 30rpx 95rpx;
}

.card-info {
  padding: 10rpx 75rpx;
  background-color: #eee;
  font-size: 36rpx;
}

.line {
  height: 70rpx;
  width: 600rpx;
  border-bottom: solid 1rpx #ddd;
}

.title {
  height: 50rpx;
  line-height: 50rpx;
  width: 149rpx;
  margin-top: 10rpx;
  text-align: center;
  float: left;
  font-weight: bold;
  border-right: solid 1rpx #ddd;
}

.content {
  height: 50rpx;
  line-height: 50rpx;
  width: 450rpx;
  margin-top: 10rpx;
  text-align: center;
  float: left;
}

.block {
  line-height: 50rpx;
  padding-top: 50rpx;
  padding-bottom: 50rpx;
  font-style: italic;
}

button {
  margin: 50rpx 75rpx;
}

.sign {
  height: 30rpx;
  line-height: 30rpx;
  text-align: center;
  font-size: 24rpx;
}

.extra-panel {
  position: fixed;
  bottom: 0;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  height: 100%;
  width: 750rpx;
}

.panel-bg {
  background-color: rgba(0, 0, 0, 0.5);
  flex-grow: 1;
  width: 750rpx;
}

.panel-main {
  width: 750rpx;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.panel-head {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 750rpx;
  height: 90rpx;
  background-color: #eee;
}

.panel-title {
  font-size: 35rpx;
  color: #000;
  margin-left: 30rpx;
}

.close-icon {
  height: 35rpx;
  width: 35rpx;
  margin-right: 30rpx;
}

.panel-img {
  width: 200px;
  height: 360px;
}


.panel-btn {
  width: 600rpx;
}

.panel-text {
  color: #999;
  font-size: 26rpx;
  height: 60rpx;
  line-height: 60rpx;
}

.test-img {
  height: 300rpx;
  width: 300rpx;
}